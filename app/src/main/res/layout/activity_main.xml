<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- This TextView just shows "Hello World!" -->

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Travel Photos App"
        android:textSize="30sp"
        android:textStyle="bold" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/th0"
            android:layout_width="439dp"
            android:layout_height="319dp"
            android:src="@drawable/th0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139"
            tools:layout_editor_absoluteX="-14dp" />
        <ImageView
            android:id="@+id/th1"
            android:layout_width="439dp"
            android:layout_height="319dp"
            android:src="@drawable/th1"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139"

            tools:layout_editor_absoluteX="-14dp" />
        <ImageView
            android:id="@+id/th2"
            android:layout_width="439dp"
            android:layout_height="319dp"
            android:src="@drawable/th2"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139"

            tools:layout_editor_absoluteX="-14dp" />

        <ImageView
            android:id="@+id/th3"
            android:layout_width="439dp"
            android:layout_height="319dp"
            android:alpha="0"
            android:src="@drawable/th3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.473"

            tools:layout_editor_absoluteX="-70dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnPre"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:src="@drawable/previous" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/next" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvHello2"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Zero Point"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />


</LinearLayout>
